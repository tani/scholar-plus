{
  "name": "Scholar Plus",
  "description": "Utilities for Google Scholar",
  "version": "0.1.0",
  "manifest_version": 3,
  "permissions": ["downloads", "clipboardWrite", "scripting", "tabs"],
  "icons": {
    "128": "icon.png"
  },
  "host_permissions": [
    "https://scholar.google.com/",
    "https://scholar.googleusercontent.com/"
  ],
  "background":{
    "service_worker": "background.js"
  },
  "content_scripts": [{
    "matches": [
      "https://scholar.google.com/*",
      "https://scholar.google.co.jp/*",
      "https://scholar.google.jp/*"
    ],
    "js": ["content.js"]
  }]
}
